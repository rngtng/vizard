!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content => "chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1"}

    %title vizard.io - shiny UML Graphs on top of PlantUML

    %link{rel:"stylesheet", type:"text/css", href:"http://yui.yahooapis.com/pure/0.6.0/pure-min.css", media:"screen"}
    %link{rel:"stylesheet", type:"text/css", href:"/stylesheets/style.css?9", media:"screen"}

  %body
    %header

    %section
      .edit
        .editor-wrapper
        .view
      .browse
        .view

    %footer
      graphs rendered with
      %a{href:'http://plantuml.sourceforge.net', target:'_blank'} PlantUml
      &middot;
      %a{href:'http://plantuml.sourceforge.net/PlantUML_Language_Reference_Guide.pdf', target:'_blank'} Language Reference Guide
      &middot;
      %a{href:'https://github.com/rngtng/vizard', target:'_blank'} Fork vizard.io on GitHub

    %script#headerTemplate{type: "text/template"}
      .title
        %h1 vizard.io

      .create
        %form.pure-form
          %button#create.pure-button Create a new diagram

    %script#browserTemplate{type: "text/template"}
      .start
        .title
          %h1 vizard.io
        .create
          %form.pure-form
            %button#create.pure-button Start with creating a new diagram!

    %script#editHeaderTemplate{type: "text/template"}
      .title
        %h1 vizard.io
        .menu.breadcrumb
          %a#item{href: "/<%= itemPath %>", title: "Click to rename"}
            <%= itemTitle %>
        %form.rename.breadcrumb.pure-form
          %input#modelId{type: "text", value: "<%= itemTitle %>"}
          %button#rename.pure-button Rename
          %button#cancelRename.pure-button Cancel
      .create
        %form.pure-form
          %button#save.pure-button Save
          %button#delete.pure-button Delete
          %button#create.pure-button Create a new diagram

    %script#diagramTemplate{type: "text/template"}
      .wrapper
        .menu
          %a.btnEdit{href: "/edit/<%= itemPath %>", title: 'Edit'} Edit
          %a.btnShow{href: "/<%= itemPath %>", title: 'Show'} Show
          %a.btnExtend{href: "#extend", title: 'Zoom in'} +
          %a.btnShrink{href: "#shrink", title: 'Zoom out'} -
          %a.btnDownload{href: "data:image/png;base64,<%= image %>", download:"<%= itemPath %>.png", title: 'Download'} Download
        %b <%= itemTitle %>
        .img
          %img{src: "data:image/png;base64,<%= image %>", title: "Click to <%= action %>"}

    %script{src:"/bundle.js"}
    %script{type: "text/javascript"}
